<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{!-- {{#each todos}} --}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto mr-auto">
        <h4 style="display: inline;vertical-align: middle;"> Category </h4>
        <h4 style="display: inline;vertical-align: middle;"> Name </h4>
        <h4 style="display: inline;vertical-align: middle;"> Date </h4>
        <h4 style="display: inline;vertical-align: middle;"> Expense </h4>
      </div>
      <div class="col-auto">
        <a href="/records/{{{this.id}}}/edit" class="btn btn-success">edit</a>
        <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="post" style="display:inline">
          <button type="submit" class="btn btn-danger">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{!-- {{/each}} --}}
</ul>